set $mod Mod4
set $left h
set $down j
set $up k
set $right l

set $terminal footclient
set $browser qutebrowser
set $filemanager thunar
set $filesearcher fsearch
set $passwordmanager keepassxc

# ------------------------------------------------------------------------------
# Custom actions
# ------------------------------------------------------------------------------

bindsym --no-repeat $mod+Return exec $terminal
bindsym --no-repeat $mod+f exec $filemanager
bindsym --no-repeat $mod+b exec 'if pgrep --exact "$(basename $browser)" >/dev/null; then swaymsg "[app_id=\".*$(basename $browser).*\"] focus"; else $browser; fi'
bindsym --no-repeat Alt+Space exec $filesearcher
bindsym --no-repeat $mod+Shift+p exec $passwordmanager

bindsym --no-repeat $mod+d exec bash launchmenu.sh
bindsym --no-repeat $mod+v exec bash cliphist.sh
bindsym --no-repeat $mod+o exec bash openfile.sh
bindsym --no-repeat $mod+F12 exec bash powermenu.sh

set $volume bash volumectl.sh
bindsym --locked XF86AudioMute exec $volume --action mute
bindsym --locked XF86AudioLowerVolume exec $volume --action down
bindsym --locked XF86AudioRaiseVolume exec $volume --action up
bindsym --locked XF86AudioMicMute exec $volume --action micmute

bindsym --locked XF86MonBrightnessDown exec brightnessctl set 5%-
bindsym --locked XF86MonBrightnessUp exec brightnessctl set 5%+

bindsym --no-repeat $mod+t exec dict.sh
bindsym --no-repeat $mod+Shift+d exec toggle-theme switch

bindsym --no-repeat $mod+p exec playerctl play-pause
bindsym --no-repeat $mod+comma exec playerctl previous
bindsym --no-repeat $mod+period exec playerctl next

# Take a custom range screenshot then copy to clipboard
bindsym --no-repeat $mod+Shift+s exec grim -g "$(slurp -d)" - | wl-copy -t image/png
# Take a fullscreen shot then pipe to satty for editing
bindsym --no-repeat $mod+Shift+e exec grim - | satty --filename -
# Take a custom range screenshot then save and copy
bindsym --no-repeat $mod+Shift+Ctrl+s exec sh -c '\
    if screenshot=$(slurp -d); then \
      grim -g "$screenshot" - | \
      tee ~/Pictures/screenshots/$(date +%Y-%m-%d_%H-%M-%S).png | \
      wl-copy -t image/png && \
      notify-send "Screenshot Copied & Saved"; \
    fi'

# ------------------------------------------------------------------------------
# Builtin actions
# ------------------------------------------------------------------------------

bindsym --no-repeat $mod+Shift+q kill
bindsym --no-repeat $mod+Ctrl+shift+q [workspace=__focused__] kill

bindsym --no-repeat $mod+Ctrl+l exec swaylock

bindsym --no-repeat $mod+Shift+c reload
bindsym --no-repeat $mod+Shift+Ctrl+F12 exec swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -B 'Yes, exit sway' 'swaymsg exit'

# Move around
bindsym --no-repeat $mod+$left focus left
bindsym --no-repeat $mod+$down focus down
bindsym --no-repeat $mod+$up focus up
bindsym --no-repeat $mod+$right focus right
bindsym --no-repeat $mod+Left focus left
bindsym --no-repeat $mod+Down focus down
bindsym --no-repeat $mod+Up focus up
bindsym --no-repeat $mod+Right focus right

# Move the focused window
bindsym --no-repeat $mod+Shift+$left move left
bindsym --no-repeat $mod+Shift+$down move down
bindsym --no-repeat $mod+Shift+$up move up
bindsym --no-repeat $mod+Shift+$right move right
bindsym --no-repeat $mod+Shift+Left move left
bindsym --no-repeat $mod+Shift+Down move down
bindsym --no-repeat $mod+Shift+Up move up
bindsym --no-repeat $mod+Shift+Right move right

# Workspaces
bindsym --no-repeat $mod+1 workspace number 1
bindsym --no-repeat $mod+2 workspace number 2
bindsym --no-repeat $mod+3 workspace number 3
bindsym --no-repeat $mod+4 workspace number 4
bindsym --no-repeat $mod+5 workspace number 5
bindsym --no-repeat $mod+6 workspace number 6
bindsym --no-repeat $mod+7 workspace number 7
bindsym --no-repeat $mod+8 workspace number 8
bindsym --no-repeat $mod+9 workspace number 9
bindsym --no-repeat $mod+0 workspace number 10
bindsym --no-repeat $mod+Shift+1 move container to workspace number 1
bindsym --no-repeat $mod+Shift+2 move container to workspace number 2
bindsym --no-repeat $mod+Shift+3 move container to workspace number 3
bindsym --no-repeat $mod+Shift+4 move container to workspace number 4
bindsym --no-repeat $mod+Shift+5 move container to workspace number 5
bindsym --no-repeat $mod+Shift+6 move container to workspace number 6
bindsym --no-repeat $mod+Shift+7 move container to workspace number 7
bindsym --no-repeat $mod+Shift+8 move container to workspace number 8
bindsym --no-repeat $mod+Shift+9 move container to workspace number 9
bindsym --no-repeat $mod+Shift+0 move container to workspace number 10

bindsym --no-repeat $mod+less move workspace to output left
bindsym --no-repeat $mod+greater move workspace to output right

# Container Layout
bindsym --no-repeat $mod+x splith
bindsym --no-repeat $mod+s splitv
bindsym --no-repeat $mod+q layout stacking
bindsym --no-repeat $mod+w layout tabbed
bindsym --no-repeat $mod+e layout toggle split
bindsym --no-repeat $mod+F11 fullscreen
# Toggle the current focus between tiling and floating mode
bindsym --no-repeat $mod+Shift+Space floating toggle
# Moves focus between floating and tiled layers
bindsym --no-repeat $mod+Space focus mode_toggle
# Move focus to parent of focused container
bindsym --no-repeat $mod+a focus parent

# Scratchpad
# Move the currently focused window to scratchpad
bindsym --no-repeat $mod+Shift+minus move scratchpad
# Show the next scratchpad window or hide the focused scratchpad window
bindsym --no-repeat $mod+minus scratchpad show

# Resize Container
mode "resize" {
    bindsym $left resize shrink width 10px
    bindsym $down resize grow height 10px
    bindsym $up resize shrink height 10px
    bindsym $right resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym --no-repeat Return mode "default"
    bindsym --no-repeat Escape mode "default"
}
bindsym --no-repeat $mod+r mode "resize"

# Touchpad gestures
bindgesture swipe:right workspace prev
bindgesture swipe:left workspace next

bindgesture pinch:inward floating enable
bindgesture pinch:outward floating disable
