# Using macro should type prefix , first
macro p set pager "less --RAW-CONTROL-CHARS"; open; set pager internal
macro b set browser "qutebrowser %u"; open-in-browser; set browser "xdg-open %u"
macro v set browser "mpv %u"; open-in-browser; set browser "xdg-open %u"
macro c set browser "echo %u | wl-copy"; open-in-browser; set browser "xdg-open %u"

