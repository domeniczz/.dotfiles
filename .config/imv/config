[options]
suppress_default_binds = true
loop_input = true
scaling_mode = full
background = 020202
overlay = true
overlay_position_bottom = true
overlay_font = Monospace:10
overlay_text_color = ffffff
overlay_text_alpha = ff
overlay_background_color = 020202
overlay_background_alpha = a0
overlay_text = $(echo -e "$(basename "$imv_current_file")\n[${imv_current_index}/${imv_file_count}] [${imv_width}x${imv_height}] [${imv_scale}%]")

[binds]
q = quit

<Left> = prev
<Right> = next
<bracketleft> = prev
<bracketright> = next
<Shift+K> = prev
<Shift+J> = next
gg = goto 1
<Shift+G> = goto -1

j = pan 0 -50
k = pan 0 50
h = pan 50 0
l = pan -50 0
c = center

<minus> = zoom -1
<Shift+plus> = zoom 1
<equal> = zoom actual
<Ctrl+equal> = zoom actual; scaling full

<Ctrl+r> = rotate by 90

x = close
f = fullscreen
<F11> = fullscreen
d = overlay
s = scaling next
<Shift+S> = upscaling next
r = reset

<period> = next_frame
<space> = toggle_playing

t = slideshow +1
<Shift+T> = slideshow -1

y = exec echo "$imv_current_file" | wl-copy && notify-send "Image path copied" --expire-time=600
<Shift+Y> = exec wl-copy --type "$(file --mime-type --brief "$imv_current_file")" < "$imv_current_file" && notify-send "Image file copied" --expire-time=600

<Shift+O> = exec sh -c 'DIR="$(dirname "$imv_current_file")"; imv-msg "$imv_pid" close all; imv-msg "$imv_pid" open -r "$DIR"'
